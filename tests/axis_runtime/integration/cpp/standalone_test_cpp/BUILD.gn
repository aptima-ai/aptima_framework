import("//build/aptima_runtime/feature/test.gni")
import("//build/aptima_runtime/aptima.gni")

aptima_package_test_prepare_auxiliary_resources("standalone_test_cpp_files") {
  resources = [
    "//tests/aptima_runtime/integration/common=>common",
    "//tests/aptima_runtime/integration/cpp/standalone_test_cpp/default_extension_cpp=>default_extension_cpp",
    "__init__.py",
    "test_case.py",
  ]

  if (aptima_enable_aptima_manager) {
    # The standalone testing for the C++ extension depends on the googletest
    # system package.
    deps = [ "//third_party/googletest:googletest_system_package" ]
  }
}

group("standalone_test_cpp") {
  deps = [ ":standalone_test_cpp_files" ]
}
